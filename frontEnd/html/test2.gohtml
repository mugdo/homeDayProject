{{ template "head" . }}

<div id="content">
    <style>
        #pager{
            margin-top: 10px;
            margin-bottom: 10px;
            overflow: hidden;
            height: 34px;
            width: 400px;
        }
        #b1{
            margin-left: 0px;
            width: 70px;
            border: 1px solid blue;
            text-align: center;
            background-color: lightseagreen;
            color: white;
            padding: 5px 0px;
            border-radius: 3px;
            cursor:pointer;
        }
        #b1 a{
            display:block;
        }
        #b2{
            margin-right: 0px;
            margin-top: -32px;
            width: 70px;
            border: 1px solid blue;
            background-color: lightseagreen;
            color: white;
            text-align: center;
            padding: 5px 0px;
            border-radius: 3px;
        }
        #b2 a{
            display:block;
        }
    </style>
    <div id="pager">
        <div id="b1">
            <a id="pre" herf="#">Previous</a>
        </div>
        <div id="pagination">
            <ul id="pageUL">
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li><a href="#">6</a></li>
                <li><a href="#">7</a></li>
                <li><a href="#">8</a></li>
                <li><a href="#">9</a></li>
                <li><a href="#">10</a></li>
                <li><a href="#">11</a></li>
                <li><a href="#">12</a></li>
                <li><a href="#">13</a></li>
                <li><a href="#">14</a></li>
                <li><a href="#">15</a></li>
                <li><a href="#">16</a></li>
                <li><a href="#">17</a></li>
                <li><a href="#">18</a></li>
                <li><a href="#">19</a></li>
                <li><a href="#">20</a></li>
            </ul>
        </div>
        <div id="b2">
            <a id="next" herf="#">Next</a>
        </div>
    </div>
    <script>
        let total=0;
        $('#pre').click(function(){
            if(total<0){
                $("#pageUL").css({ "transform":"translateX("+(total+50)+"px)","transition": "transform 1s ease" });
                total+=50;
            }
        });
        $('#next').click(function(){
            $("#pageUL").css({ "transform":"translateX("+(total-50)+"px)","transition": "transform 1s ease" });
            total-=50;
        });
    </script>
</div>

{{ template "close" . }}